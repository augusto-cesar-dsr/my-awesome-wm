#!/bin/bash

# Force start autostart applications
echo "ðŸš€ Force Starting Autostart Applications"
echo "========================================"

# Get terminal from AwesomeWM config
TERMINAL="x-terminal-emulator"

echo "1. ðŸ–¥ï¸  Starting Terminal with Nvim in Tag 1..."
# Switch to tag 1 and start terminal
awesome-client 'awful.tag.find_by_name(awful.screen.focused(), "ó°¨ž"):view_only()'
sleep 1
$TERMINAL -e nvim &
sleep 2

echo "2. ðŸ’¬ Starting Slack in Tag 2..."
# Switch to tag 2 and start slack
awesome-client 'awful.tag.find_by_name(awful.screen.focused(), "ó°’±"):view_only()'
