echo "3. ðŸŒ Starting Chrome in Tag 3..."
# Switch to tag 3 and start chrome
awesome-client 'awful.tag.find_by_name(awful.screen.focused(), "ó°–Ÿ"):view_only()'
sleep 1
google-chrome-stable --profile-directory='Profile 1' &
