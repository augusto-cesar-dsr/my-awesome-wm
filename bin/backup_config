#!/bin/bash

# Git-based backup for AwesomeWM configuration
cd "$HOME/.config/awesome" || exit 1

# Check if git repo exists
if [ ! -d ".git" ]; then
    echo "‚ùå Not a git repository. Initialize with: git init"
    exit 1
fi

# Add all changes
git add -A

# Check if there are changes to commit
if git diff --cached --quiet; then
    echo "‚úÖ No changes to backup"
    exit 0
fi

# Create commit with timestamp
TIMESTAMP=$(date '+%Y-%m-%d %H:%M:%S')
git commit -m "backup: automatic backup - $TIMESTAMP"

echo "‚úÖ Configuration backed up successfully"
echo "üìä Recent commits:"
git log --oneline -5
