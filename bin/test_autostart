#!/bin/bash

# Test autostart applications manually
echo "🧪 Testing Autostart Applications"
echo "================================="

# Kill existing instances first (for testing)
echo "🔄 Stopping existing instances..."
pkill -f "nm-applet" 2>/dev/null
pkill -f "blueman-applet" 2>/dev/null  
pkill -f "pasystray" 2>/dev/null
sleep 2

echo "🚀 Starting applets with delays..."

# Start nm-applet
echo "  Starting nm-applet..."
nm-applet &
sleep 2

# Start blueman-applet
echo "  Starting blueman-applet..."
blueman-applet &
sleep 2

# Start pasystray
echo "  Starting pasystray..."
pasystray &
sleep 2

echo "✅ All applets started!"
echo ""
echo "📊 Current status:"
echo "  nm-applet: $(pgrep -x nm-applet >/dev/null && echo '✅ Running' || echo '❌ Not running')"
echo "  blueman-applet: $(pgrep -x blueman-applet >/dev/null && echo '✅ Running' || echo '❌ Not running')"
echo "  pasystray: $(pgrep -x pasystray >/dev/null && echo '✅ Running' || echo '❌ Not running')"
echo ""
echo "💡 Check your system tray for the applets!"
