#!/bin/bash

# Test autostart applications manually
echo "ğŸ§ª Testing Autostart Applications"
echo "================================="

# Kill existing instances first (for testing)
echo "ğŸ”„ Stopping existing instances..."
pkill -f "nm-applet" 2>/dev/null
pkill -f "blueman-applet" 2>/dev/null  
pkill -f "pasystray" 2>/dev/null
sleep 2

echo "ğŸš€ Starting applets with delays..."

# Start nm-applet
echo "  Starting nm-applet..."
nm-applet &
sleep 2

# Start blueman-applet
echo "  Starting blueman-applet..."
blueman-applet &
sleep 2

# Start pasystray
echo "  Starting pasystray..."
pasystray &
sleep 2

echo "âœ… All applets started!"
echo ""
echo "ğŸ“Š Current status:"
echo "  nm-applet: $(pgrep -x nm-applet >/dev/null && echo 'âœ… Running' || echo 'âŒ Not running')"
echo "  blueman-applet: $(pgrep -x blueman-applet >/dev/null && echo 'âœ… Running' || echo 'âŒ Not running')"
echo "  pasystray: $(pgrep -x pasystray >/dev/null && echo 'âœ… Running' || echo 'âŒ Not running')"
echo ""
echo "ğŸ’¡ Check your system tray for the applets!"
